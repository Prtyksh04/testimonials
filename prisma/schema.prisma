generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Space {
  id            Int           @id @default(autoincrement())
  spaceName     String        @unique
  userId        String
  headerTitle   String
  customMessage String
  questions     String[]
  testimonials  Testimonial[]

  @@unique([userId, spaceName])
}

model Testimonial {
  id          Int      @id @default(autoincrement())
  spaceName   String
  space       Space    @relation(fields: [spaceName], references: [spaceName])
  starRating  Int
  content     String?
  name        String
  email       String
  type        TestimonialType
  videoUrl    String? // Add this field for storing video URLs
  submittedAt DateTime @default(now())

  @@index([spaceName])
}

enum TestimonialType {
  TEXT
  VIDEO
}
